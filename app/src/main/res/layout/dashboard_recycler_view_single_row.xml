<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    android:background="#ffffff"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:id="@+id/llContent">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:padding="6dp"
            android:src="@drawable/ic_default_image_restaurant"
            android:layout_weight="1.3"
            android:id="@+id/imgRestaurant"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.6"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pind Tadka"
                android:textSize="20sp"
                android:id="@+id/txtRestaurantName"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:padding="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/person"
                android:textSize="16dp"
                android:id="@+id/txtCostPerPerson"
                android:layout_below="@id/txtRestaurantName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:drawablePadding="4dp"
                android:layout_margin="5dp"
                android:padding="6dp"/>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:id="@+id/txtFavourite"
                android:layout_centerHorizontal="true"
                android:tag="unliked"
                android:background="@drawable/ic_favourite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="@android:integer/config_longAnimTime"
                android:text="4.5"
                android:textColor="#ffc107"
                android:textStyle="bold"
                android:drawablePadding="4dp"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:layout_below="@+id/txtFavourite"
                android:id="@+id/txtRating"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>